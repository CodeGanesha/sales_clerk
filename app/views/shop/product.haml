.row
  =render "parents"
  
  .col-md-8
    %br/
    
    .row.product-info
      .col-md-12.product-title-h1
        %h1.product-title= @product.name
        %br/
    
    .row
      .col-md-3.picture
        =image_tag @product.main_picture.url(:product) , :class => "img-responsive-prod"
      #product-description.col-md-9
        .row
          .col-md-12
            %strong= @product.name
            = markdown @product.description rescue ""
            %a{"data-content" => "Suuri osa Farfallan luomukosmetiikasta ja sen tehokkaista, vaikuttavista ainesosista on sertifioitu kansainvälisen NaTrue -luomu- ja luonnonkosmetiikkasertifikaatin mukaan. Kaikilla muilla Farfallan tuotteilla on saksalainen BDIH -sertifikaatti.", "data-toggle" => "popover",  :title => "NaTrue"} Lue lisää
            %br
            
            
        .row
          .col-md-4.product-price
            %h4
              =t(:price)
              %span.price.selling= euros @product.price
          .col-md-8
            = form_tag(cart_add_url(:id => @product.id)) do
              #inside-product-cart-form
                .add-to-cart
                  .row
                    .col-md-10
                      %button#add-to-cart-button.btn.btn-primary{:type => :submit}
                        = t(:add_to_basket)
    
    .row
      .col-md-12
        %br/
        %h6.highlight.product-hint Muita tuotteita samassa tuoteryhmässä
        %table.table-condensed.product-hints
          %tbody
            - in_group(@product).each do |p|
              %tr
                %td.picture.tdpic 
                  %img{:alt => "Iflahja", :src => "/images/5033/thumb/iFlahja.jpg?1395071348"}/
                %td.tdtex
                  =link_to shop_product_path(:link => p.link ) do
                    = p.name
                %td.picture.tdpic  
                  %img{:alt => "Iflahja", :src => "/images/5033/thumb/iFlahja.jpg?1395071348"}/
                %td.tdtex
                  =link_to shop_product_path(:link => p.link ) do
                    = p.name
                %td.picture.tdpic  
                  %img{:alt => "Iflahja", :src => "/images/5033/thumb/iFlahja.jpg?1395071348"}/
                %td.tdtex
                  =link_to shop_product_path(:link => p.link ) do
                    = p.name
                %td.picture.tdpic 
                  %img{:alt => "Iflahja", :src => "/images/5033/thumb/iFlahja.jpg?1395071348"}/
                %td.tdtex
                  =link_to shop_product_path(:link => p.link ) do
                    = p.name
                
            
          
  .col-md-1


