%html{lang: (I18n.locale || I18n.default_locale)}
  %head
    %meta{charset: "utf-8"}/
    %title Auringosta Itään, Kuusta Länteen
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1", name: "viewport"}
    %meta{content: "Sisustus, Lifestyle, luomukosmetiikka , luonnonkosmetiikka , farfalla", name: "keywords"}
    = stylesheet_link_tag "sales_clerk"
    = javascript_include_tag "sales_clerk"
    = csrf_meta_tags
  %body
    .container-fluid
      %header
        .row
          %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
            .navbar-inner
              .row.taustalogo
                .col-md-6
                  %a{href: "/"}
                    %img{:src => "/assets/sales_clerk/spacer.gif", :height => "80", :width => "650"}/
                  
                .col-md-6
                  %ul.nav.navbar-nav.navbar-right
                    %li.dropdown 
                      %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                        Auringosta Itään, Kuusta Länteen
                        %b.caret
                      %ul.dropdown-menu 
                        %li{:role => "presentation"} 
                          %a{:href => "/page/liikkeemme", :role => "menuitem", :tabindex => "-1"} Liikkeemme
                          
                        %li{:role => "presentation"} 
                          %a{:href => "/page/toimitusehdot", :role => "menuitem", :tabindex => "-1"} Toimitusehdot

                    %li#link-to-cart{"data-no-turbolink" => true}
                      %a{href: office.shop_checkout_path}
                        = t(:basket)
                        - if current_basket_or_nil.nil? or current_basket.items.count == 0
                          = t(:empty)
                        -else
                          = current_basket.items.count
                          = t(:items)
                    %li.dropdown
                      %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                        = current_clerk ? current_clerk.email : t(:sign_in)
                        %b.caret
                      %ul.dropdown-menu
                        - if current_clerk
                          %li= link_to t(:sign_out), office.sign_out_path
                        - else
                          %li= link_to t(:sign_up), office.sign_up_path
                          %li= link_to t(:sign_in), office.sign_in_path
          
      .main
        .row          
          - if not flash[:notice].blank? then
            .col-md-12
              .alert-notice.row
                .col-md-9
                .col-md-3.alert-shop
                  .alert-message!= flash[:notice]
          - if not flash[:error].blank? then
            .col-md-12.alert-shop
              .alert-error.row.alert-shop
                .col-md-1
                  .alert-heading= t(:info) + " :"
                .col-md-11
                  .alert-message!= flash[:notice]
      

        .row
          .col-md-12
            = yield


      .row
        .col-md-6
          .footer
            Suunnittelu ja toteutus Ruby Design    
            %br/
            Powered by
            %a{href: "http://rubyclerks.com/"} RubyClerks
        .col-md-6
          .footer.right
            %b> AURINGOSTA ITÄÄN, KUUSTA LÄNTEEN
            %br/
            Fredrikinkatu 19 (Viiskulma), Helsinki
            %br/
            puh +358- (0)9- 621 7001 | Y-tunnus 2380478-1
            %br/
            %br/
            
            
        = render "layouts/google" if Rails.env.production?
